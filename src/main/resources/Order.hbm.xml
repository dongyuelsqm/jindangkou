<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.kingdangkou.weixin.weixiaodan.model.Order" table="orders">
        <meta attribute="class-description">
            This class contains the employee detail.
        </meta>
        <id name="order_id" type="int" column="order_id">
            <generator class="native"/>
        </id>
        <property name="product_id" column="product_id" type="int"/>
        <property name="discount" column="discount" type="float"/>
        <property name="customer_id" column="customer_id" type="int"/>
        <property name="address_id" column="address_id" type="int"/>
        <property name="date" column="deal_date" type="java.util.Date"/>
        <property name="ship_id" column="ship_id" type="int"/>
        <property name="state" column="state" type="int"/>
        <property name="number" column="number" type="int"/>
    </class>
</hibernate-mapping>